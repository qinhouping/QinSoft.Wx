
@{
    ViewBag.Title = "UploadMedia";
}

<style>
    .bs-form .input-group {
        margin-bottom: 10px;
    }
</style>

<h2>UploadMedia</h2>

<form class="bs-form" method="post" action="@Url.Action("UploadMediaHandle","OfficialAccount")" enctype="multipart/form-data">
    <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">类型</span>
        <select  class="form-control" name="type">
            <option value="image">图片</option>
            <option value="voice">语音</option>
            <option value="video">视频</option>
            <option value="thumb">缩略图</option>
        </select>
    </div>
    <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">文件</span>
        <input type="file" class="form-control" name="file">
    </div>
    <div class="input-group">
        <input type="submit" class="form-control">
    </div>
</form>