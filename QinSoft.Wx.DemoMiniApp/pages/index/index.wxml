<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindLogViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="test">
    <button bind:tap="bindButtonTap" data-info="true">click me!</button>
  </view>
  <view class="usermotto">
    <text class="user-motto" bindtap="bindGreetViewTap">{{motto}}</text>
  </view>
</view>
