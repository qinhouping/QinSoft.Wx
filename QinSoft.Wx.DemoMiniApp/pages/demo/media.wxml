<!--pages/demo/media.wxml-->

<view>
	<block>
		<audio id="a1" src="{{audioSrc}}" controls="true" poster="{{audioPoster}}" name="{{audioName}}" author="{{audioAuthor}}" bind:errorr="bindAudioError"></audio>
	</block>

	<block>
		<camera device-position="back" flash="off" style="width: 100%; height: 300px;"></camera>
		<button type="primary" bindtap="bindCameraButtonTap">拍照</button>
		<view>预览</view>
		<image mode="widthFix" src="{{photoSrc}}"></image>
	</block>
</view>